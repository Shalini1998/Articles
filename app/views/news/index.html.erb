<h1>Listing news</h1>
<%= link_to 'New news', new_news_path %>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @news.each do |news| %>
    <tr>
      <td><%= news.title %></td>
      <td><%= news.description %></td>
      <td><%= link_to 'Show', news_path(news) %></td>
      <td><%= link_to 'Edit', edit_news_path(news) %></td>
      <td><%= link_to 'Destroy', news_path(news),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
      </tr>

  <% end %>
</table>